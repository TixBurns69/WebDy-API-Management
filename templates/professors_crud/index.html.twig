{% extends 'base.html.twig' %}

{% block title %}Professors index{% endblock %}

{% block body %}
    <h1>Professors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Discipline</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professor in professors %}
            <tr>
                <td>{{ professor.id }}</td>
                <td>{{ professor.Name }}</td>
                <td>{{ professor.Contact }}</td>
                <td>{{ professor.discipline }}</td>
                <td>
                    <a href="{{ path('app_professors_crud_show', {'id': professor.id}) }}">show</a>
                    <a href="{{ path('app_professors_crud_edit', {'id': professor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professors_crud_new') }}">Create new</a>
{% endblock %}
